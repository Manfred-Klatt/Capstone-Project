# Font and Audio file caching for optimal web performance
# Cache fonts and audio files for 1 year (31536000 seconds)
<IfModule mod_expires.c>
    ExpiresActive On
    # Font files
    ExpiresByType font/otf "access plus 1 year"
    ExpiresByType font/ttf "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType application/font-otf "access plus 1 year"
    ExpiresByType application/font-ttf "access plus 1 year"
    # Image files
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/avif "access plus 1 year"
    # Audio files
    ExpiresByType audio/ogg "access plus 1 year"
    ExpiresByType audio/wav "access plus 1 year"
    ExpiresByType audio/mpeg "access plus 1 year"
</IfModule>

# Set cache headers for fonts and audio files
<IfModule mod_headers.c>
    # Font caching with aggressive 1-year cache and CORS headers
    <FilesMatch "\.(woff2|woff|otf|ttf|eot)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
        Header set Access-Control-Allow-Origin "*"
        Header set Access-Control-Allow-Methods "GET"
        Header set Access-Control-Allow-Headers "Content-Type"
    </FilesMatch>

    # Image caching with aggressive 1-year cache (including WebP)
    <FilesMatch "\.(jpg|jpeg|png|gif|svg|ico|webp|avif)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>

    # WebP image serving with proper MIME type
    <FilesMatch "\.webp$">
        Header set Content-Type "image/webp"
    </FilesMatch>

    # Audio files
    <FilesMatch "\.(ogg|wav|mp3)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
        Header set Vary "Accept-Encoding"
    </FilesMatch>
</IfModule>

# Enable compression for uncompressed audio files
<IfModule mod_deflate.c>
    <FilesMatch "\.(wav)$">
        SetOutputFilter DEFLATE
    </FilesMatch>
</IfModule>

# Security headers for audio files
<FilesMatch "\.(ogg|wav|mp3)$">
    Header always set X-Content-Type-Options nosniff
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
</FilesMatch>
