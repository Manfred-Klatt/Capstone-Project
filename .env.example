# Server Configuration
NODE_ENV=development
PORT=8000

# Database
MONGODB_URI=mongodb://localhost:27017/acnh-quiz

# JWT
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=90d
JWT_COOKIE_EXPIRES_IN=90

# Rate Limiting
RATE_LIMIT_WINDOW_MS=15 * 60 * 1000
RATE_LIMIT_MAX=100

# CORS
CORS_ORIGIN=http://localhost:3000,https://acnhid.b-cdn.net

# Session
SESSION_SECRET=your_session_secret_here

# API Keys (if any)
NOOKIPEDIA_API_KEY=your_nookipedia_api_key_here

# Guest Access Tokens
GUEST_LEADERBOARD_TOKEN=random_secure_token_for_public_leaderboard_access
GUEST_IMAGE_TOKEN=random_secure_token_for_public_image_access
